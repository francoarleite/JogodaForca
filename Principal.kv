        padding: 0,'10dp',0,0
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'images/paper8.jpg'
        orientation: 'vertical'
        ImageButton:
            source:"images/back.png"
            size_hint: .1,None
            height: 60
            on_press: root.desistir()
        BoxLayout:
            orientation:'vertical'
            Image:
                id:forca
                source:''
                size_hint: 1,3
                allow_stretch: True
        StackLayout:
            padding: '32sp'
            Label:
                id: box1
                size_hint: 1,.5
                font_size: '35dp'
                color: 0,0,0,1
                markup: True
                halign: 'center'
                valign: 'top'
                font_name: 'fonts\giz_cera.ttf'


