
<Telas>:
    Menu:
        name: 'tela1'
    FirstLayout:
        name: 'tela2'

<CustomPopup>:
	id: pop
    size_hint: .7,.3
    auto_dismiss: False
    title: self.title
    title_align: 'center'
    title_size: '50dp'
    title_color: (0,0,0,1)
    title_font: 'fonts\giz_cera.ttf'
    separator_color:(0,0,0,1)
    background: 'images/bg_popup.png'

    BoxLayout:
    	spacing: '5dp'
        size_hint:.2,.2
        Button:
            text: 'Sim'
            on_press: root.dismiss()
            on_press: root.restart()
            background_color: (0,0,0,0)
            font_name: 'fonts\giz_cera.ttf'
            font_size: '50dp'
            color: (0,0,0,1)
            canvas.before:
                Line:
                    width: .5
                    rectangle: (self.width+self.x, self.y,0,self.height+5)
        Button:
            text: 'Não'
            on_press: root.dismiss()
            on_press: app.root.current = 'tela1'
            on_release: root.restart()
            background_color: (0,0,0,0)
            font_name: 'fonts\giz_cera.ttf'
            font_size: '50dp'
            color: (0,0,0,1)

