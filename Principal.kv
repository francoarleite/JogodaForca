<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 20
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'images/paper8.jpg'
        Label:
            size_hint: 1,.1
            text:'JOGO DA FORCA'
            font_size: 70
            font_name: 'fonts\giz_cera.ttf'
            strikethrough: True
            color: (0,0,0,1)
        BoxLayout:
            orientation:'vertical'
            Button:
                size_hint: 1, None
                height: '120dp'
                text: "Iniciar"
                on_press: app.root.current = "tela2"
                background_color: (0,0,0,0)
                font_name: 'fonts\giz_cera.ttf'
                font_size: '50dp'
                color: (0,0,0,1)
                #on_release: root.reinicia_jogo
            Button:
                size_hint: 1, None
                height: '120dp'
                text: "Sair"
                background_color: (0,0,0,0)
                font_name: 'fonts\giz_cera.ttf'
                font_size: '50dp'
                color: (0,0,0,1)
                on_release: app.stop()

<SmoothButton@Button>:
    background_color: 0,1,0,0
    my_color: 0,0,0,0
    border_radius: 18
    canvas.after:
        Color:
            rgba: self.my_color
        Line:
            points: self.x,self.y,self.x + self.size[0],self.y+self.size[1]
            width: 2
        Line:
            points: self.x ,self.y + self.size[1], self.x + self.size[0],self.y
            width: 2

<FirstLayout>:
