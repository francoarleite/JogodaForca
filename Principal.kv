
<Telas>:
    Menu:
        name: 'tela1'
    FirstLayout:
        name: 'tela2'

<CustomPopup>:
	id: pop
    size_hint: .7,.3
    auto_dismiss: False
    title: self.title
    title_align: 'center'
    title_size:18
    BoxLayout:
    	spacing: '5dp'
        size_hint:.2,.2
        Button:
            text: 'Sim'
            on_press: root.dismiss()
            on_press: root.restart()
        Button:
            text: 'Não'
            on_press: root.dismiss()
            on_press: app.root.current = 'tela1'
            on_release: root.restart()

<Sair_popup>:
	id: pop_desistir
    size_hint: .7,.3
    auto_dismiss: False
    title: self.title
    title_align: 'center'
    title_size:18
    BoxLayout:
    	spacing: '5dp'
        size_hint:.2,.2
        Button:
            text: 'Não'
            on_press: root.dismiss()
        Button:
            text: 'Sim'
            on_press: root.restart()
            on_press: app.root.current = 'tela1'
            on_release: root.dismiss()

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 20
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'alphabet/paper8.jpg'
        Button:
            size_hint_y:None
            height: 120          
            text: "Iniciar"
            on_press: app.root.current = "tela2"
            #on_release: root.reinicia_jogo
        Button:
            size_hint_y: None
            height: 120
            text: "Sair"
            on_release: app.stop()
